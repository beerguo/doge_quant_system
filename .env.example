# OKX API 配置 (必填)
OKX_API_KEY="您的OKX_API_KEY"
OKX_SECRET_KEY="您的OKX_SECRET_KEY"
OKX_PASSPHRASE="您的OKX_PASSPHRASE"

# Twitter API 配置 (可选)
TWITTER_BEARER_TOKEN="您的TWITTER_BEARER_TOKEN"
TWITTER_ANALYSIS_ENABLED="true"

# 系统配置
SIMULATION_MODE="false"  # 设为"true"启用模拟模式
ENABLE_BACKTEST="false"   # 设为"true"启用回测模式
CHECK_INTERVAL=300        # 检查间隔(秒)，默认5分钟

# Streamlit 配置
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS="0.0.0.0"
STREAMLIT_BROWSER_SERVER_PORT=8501

# 系统日志
LOG_FILE="doge_quant.log"
LOG_LEVEL="INFO"
